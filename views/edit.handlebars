<div class="text-center">
    <h1>Edit blog</h1>


    <form class="form edit-blog-form">
        <div class="form-group">
            <label for="blog-name">Blog Title</label>
            <input class="form-input" type="text" id="blog-name" name="blog-name" value="{{title}}" />
        </div>
        <div class="form-group">
            <label for="blog-content">Content</label>
            <textarea class="form-input" id="blog-content" name="blog-content">{{content}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary update-blog" value={{id}}>Update</button>
        </div>
    </form>
</div>


<script src="/js/edit.js"></script>